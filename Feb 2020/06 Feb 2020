/* Classes and Objects */
class Salary{
    var salary: Int
    init(salary: Int) {
        self.salary = salary
    }
}
class EmpSalary {
    var salary = 10000
}
let Income = EmpSalary()
print("Employee salary is \(Income.salary)")
